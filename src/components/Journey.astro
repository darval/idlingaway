---
// Journey section - shows the three phases
const phases = [
  {
    title: "The Tourist",
    image: "/images/phase-tourist.png",
    description: "Book your first cruise on Europe's scenic rivers. Collect loyalty points, unlock new ships, and discover ports from Amsterdam to Vienna."
  },
  {
    title: "The Resident",
    image: "/images/phase-resident.png",
    description: "Make the ship your home. Build relationships with crew, host events, and upgrade your permanent cabin to penthouse status."
  },
  {
    title: "The Mogul",
    image: "/images/phase-mogul.png",
    description: "Own your own fleet. Manage routes, hire captains, and create the cruise experience for passengers who were once just like you."
  }
];
---

<section class="journey">
  <div class="container">
    <h2 class="journey-title">Your Journey Awaits</h2>

    <div class="phases">
      {phases.map((phase, index) => (
        <div class="phase-card card">
          <div class="phase-number pixel-text">{String(index + 1).padStart(2, '0')}</div>
          <div class="phase-image-wrapper">
            <img
              src={phase.image}
              alt={phase.title}
              class="phase-image"
              onerror="this.style.display='none'"
            />
          </div>
          <h3 class="phase-title">{phase.title}</h3>
          <p class="phase-description">{phase.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .journey {
    padding: var(--space-2xl) 0;
  }

  .journey-title {
    text-align: center;
    margin-bottom: var(--space-xl);
    color: var(--color-primary);
  }

  .phases {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }

  .phase-card {
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .phase-number {
    position: absolute;
    top: var(--space-md);
    left: var(--space-md);
    color: var(--color-sky-teal);
    font-size: 0.5rem;
    z-index: 1;
  }

  .phase-image-wrapper {
    width: 100%;
    aspect-ratio: 1;
    margin-bottom: var(--space-md);
    border-radius: var(--radius-md);
    overflow: hidden;
    background: var(--color-wave-foam);
  }

  .phase-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    image-rendering: pixelated;
  }

  .phase-title {
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
  }

  .phase-description {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    margin: 0;
    line-height: 1.6;
  }

  @media (min-width: 768px) {
    .phases {
      grid-template-columns: repeat(3, 1fr);
    }

    .phase-image-wrapper {
      max-height: 280px;
    }
  }
</style>
