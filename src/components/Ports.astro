---
// Ports gallery section - showcases destinations
const ports = [
  {
    name: "Amsterdam",
    image: "/images/port-amsterdam.png",
    description: "Dutch gabled houses, tulips, and canal bridges"
  },
  {
    name: "Vienna",
    image: "/images/port-vienna.png",
    description: "Baroque palaces, the Prater, and Danube promenades"
  },
  {
    name: "Rhine Valley",
    image: "/images/port-rhine.png",
    description: "Medieval castles, terraced vineyards, and charming villages"
  }
];
---

<section class="ports">
  <div class="container">
    <h2 class="ports-title">Discover Europe's Rivers</h2>
    <p class="ports-subtitle">From the canals of Amsterdam to the castles of the Rhine</p>

    <div class="ports-grid">
      {ports.map((port) => (
        <div class="port-card">
          <div class="port-image-wrapper">
            <img src={port.image} alt={port.name} class="port-image" />
          </div>
          <div class="port-info">
            <h3 class="port-name">{port.name}</h3>
            <p class="port-description">{port.description}</p>
          </div>
        </div>
      ))}
    </div>

    <div class="ports-ship">
      <img src="/images/ship-river.png" alt="River cruise ship" class="ship-sprite" />
    </div>
  </div>
</section>

<style>
  .ports {
    padding: var(--space-2xl) 0;
    background: var(--color-wave-foam);
  }

  .ports-title {
    text-align: center;
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
  }

  .ports-subtitle {
    text-align: center;
    color: var(--color-text-muted);
    margin-bottom: var(--space-xl);
    font-size: 1.125rem;
  }

  .ports-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
  }

  .port-card {
    background: white;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .port-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .port-image-wrapper {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .port-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    image-rendering: pixelated;
  }

  .port-info {
    padding: var(--space-md);
  }

  .port-name {
    color: var(--color-primary);
    font-size: 1.125rem;
    margin-bottom: var(--space-xs);
  }

  .port-description {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin: 0;
  }

  .ports-ship {
    display: flex;
    justify-content: center;
    margin-top: var(--space-lg);
  }

  .ship-sprite {
    max-width: 300px;
    width: 100%;
    height: auto;
    image-rendering: pixelated;
  }

  @media (min-width: 768px) {
    .ports-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .ship-sprite {
      max-width: 400px;
    }
  }
</style>
