---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "What if your vacation never had to end? A cozy idle game about living the cruise dream."
} = Astro.props;

const siteName = "Idling Away";
const gameName = "Horizon Lines";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:image" content="/images/og-image.png" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/images/og-image.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@500;700&family=Press+Start+2P&family=Space+Mono&display=swap" rel="stylesheet" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/images/logo-icon.png" />

    <title>{title}</title>
  </head>
  <body>
    <slot />

    <!-- Plausible Analytics (uncomment when ready) -->
    <!-- <script defer data-domain="idlingaway.com" src="https://plausible.io/js/script.js"></script> -->
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
